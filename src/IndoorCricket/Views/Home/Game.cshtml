
<div class="row">
    <div class="col-md-12">
        <h2>Games</h2>
    </div>
</div>
<div class="row" ng-controller="game_controller">
    <div class="col-md-3">
        <h3 ng-hide="!working">{{title}}</h3>
        <ul ng-repeat="game in games" class="list-group">
            <li ng-click="getGame(game.Id)" class="list-group-item list-group-item-info"><span ng-bind="game.Date | date:'dd MMM yyyy'">{{game.Date}}</span>: {{game.Opposition}}</li>
        </ul>
    </div>
    <div class="col-md-6">
        <div id="game-overs" ng-model="selected">
            <h4>{{over.Innings ? "Bowling" : "Batting"}}</h4>
            <ol>
                <li ng-repeat="over in selected.Overs">{{over.Number}}</li>
            </ol>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget">
            <div class="widget-head">
                <div class="pull-left">New Game</div>
            </div>
            <div class="widget-content">
                <div class="panel panel-body">
                    <div class="form-group">
                        <label for="new-game-date">Date</label>
                        <input type="datetime" class="form-control" id="new-game-date" ng-model="newGame.Date" placeholder="Game date">
                    </div>
                    <div class="form-group">
                        <label for="new-game-team">Team</label>
                        <input type="text" class="form-control" id="new-game-team" ng-model="newGame.Team" placeholder="Team">
                    </div>
                    <div class="form-group">
                        <label for="new-game-opposition">Opposition</label>
                        <input type="text" class="form-control" id="new-game-opposition" ng-model="newGame.Opposition" placeholder="Opposition">
                    </div>
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/app/game-controller.js"></script>
}
